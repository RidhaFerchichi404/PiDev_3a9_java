<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #1a1a1a;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.afficheruser">
    <children>
        <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <!-- Titre -->
            <Label text="Abonnements avec Promotions"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;"/>

            <!-- ScrollPane pour les abonnements -->
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: #ff8c00;">
                <content>
                    <FlowPane fx:id="abonnementsContainer" hgap="20" vgap="20" style="-fx-background-color: black;">
                    </FlowPane>
                </content>
            </ScrollPane>

            <!-- Boutons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Retour à la liste complète" onAction="#handleRetourButtonClick"
                        style="-fx-background-color: #ff8c00; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Payer" onAction="#handlePayerButtonClick"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;
               -fx-font-weight: bold; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>