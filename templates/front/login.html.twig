{% extends 'front.html.twig' %}

{% block title %}Connexion - Sportify{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-white text-center p-4">
                    <h3 class="mb-0">Connexion</h3>
                    <p class="text-muted">Accédez à votre compte</p>
                </div>
                
                <div class="card-body p-4">
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ error }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endif %}
                    
                    <form method="post" action="{{ path('app_login_check') }}">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="email" value="{{ last_email|default('') }}" class="form-control" required autofocus placeholder="Votre adresse email">
                        </div>
                        
                        <div class="mb-4">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" id="password" name="password" class="form-control" required placeholder="Votre mot de passe">
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger py-2">
                                Se connecter
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer bg-light text-center py-3">
                    <p class="mb-0">Vous n'avez pas de compte?<br><a href="{{ path('app_register') }}" class="text-danger">Créer un compte</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 