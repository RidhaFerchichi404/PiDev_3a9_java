{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - Sportify{% endblock %}

{% block body %}
<section class="profile-edit-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center p-4">
                        <h3 class="mb-0">Modifier mon profil</h3>
                    </div>
                    
                    <div class="card-body p-4">
                        {% if app.session.flashBag.has('error') %}
                            {% for message in app.session.flashBag.get('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endif %}
                        
                        {% if app.session.flashBag.has('success') %}
                            {% for message in app.session.flashBag.get('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endif %}
                        
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.firstname) }}
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.lastname) }}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-group">
                                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-group">
                                    {{ form_label(form.phonenumber, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.phonenumber, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.phonenumber) }}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-group">
                                    {{ form_label(form.password_hash, 'Nouveau mot de passe (laisser vide pour conserver l\'actuel)', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.password_hash, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.password_hash) }}
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary py-2">
                                    Enregistrer les modifications
                                </button>
                                <a href="{{ path('app_front_profile') }}" class="btn btn-outline-secondary py-2">
                                    Annuler et retourner au profil
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %} 