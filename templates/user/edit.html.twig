{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Edit User</h5>
                <div>
                    <button type="button" class="btn btn-outline-danger btn-sm me-2" 
                            onclick="if(confirm('Are you sure you want to delete this user?')) document.getElementById('delete-form-page').submit();">
                        <i class="ri-delete-bin-line me-1"></i> Delete
                    </button>
                    <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="ri-arrow-left-line me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
    </div>
</div>

{{ include('user/_delete_form.html.twig', {'attr': {'id': 'delete-form-page', 'class': 'd-none'}}) }}
{% endblock %}
