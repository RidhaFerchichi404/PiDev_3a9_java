<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');" {% for key, value in attr|default({}) %}{{ key }}="{{ value }}"{% endfor %}>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger{{ attr|default({})|keys is empty ? ' mt-2' : '' }}">
        <i class="ri-delete-bin-line me-1"></i> Delete
    </button>
</form>
