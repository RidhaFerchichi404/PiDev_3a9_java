<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox styleClass="command-card" 
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.commande.CommandCardController"
      style="-fx-background-color: #2d2d2d; -fx-background-radius: 8;"
      prefWidth="300" prefHeight="200">
    
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <VBox spacing="10">
        <Label fx:id="orderIdLabel" 
               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: white;"/>
               
        <Label fx:id="productLabel" 
               style="-fx-text-fill: #FF8C00; -fx-font-size: 14;"/>
               
        <Label fx:id="clientLabel" 
               style="-fx-text-fill: #bbbbbb;"/>
        
        <Label fx:id="quantityLabel" 
               style="-fx-text-fill: #bbbbbb;"/>
               
        <Label fx:id="statusLabel" 
               style="-fx-text-fill: #bbbbbb;"/>
               
        <Label fx:id="dateLabel" 
               style="-fx-text-fill: #999999; -fx-font-size: 12;"/>
               
        <Label fx:id="phoneLabel" 
               style="-fx-text-fill: #bbbbbb;"/>
               
        <Label fx:id="addressLabel" 
               style="-fx-text-fill: #bbbbbb;"/>
        
        <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="editButton" text="Modifier" onAction="#handleEdit"
                    style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-min-width: 80;"/>
            <Button fx:id="deleteButton" text="Supprimer" onAction="#handleDelete"
                    style="-fx-background-color: #FF4444; -fx-text-fill: white; -fx-min-width: 80;"/>
        </HBox>
    </VBox>
</VBox> 