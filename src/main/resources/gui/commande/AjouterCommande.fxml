<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.commande.AjouterCommandeController"
      prefWidth="500" prefHeight="600"
      style="-fx-background-color: #1a1a1a;">
    
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <Label text="Nouvelle Commande" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;"/>
    
    <GridPane vgap="15" hgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Produit:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"/>
        <ComboBox fx:id="produitCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                  maxWidth="Infinity" 
                  style="-fx-background-color: white;
                         -fx-text-fill: black;"/>
        <Text GridPane.rowIndex="1" GridPane.columnIndex="1" 
              text="Sélectionnez le produit à commander" 
              style="-fx-fill: #666666; -fx-font-size: 11;"/>

        <Label text="Nom client:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"/>
        <TextField fx:id="nomClientField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                   style="-fx-background-color: white; -fx-text-fill: black;"/>

        <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"/>
        <fx:include source="PhoneInput.fxml" fx:id="phoneInput"
                    GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Adresse:" GridPane.rowIndex="4" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"/>
        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <TextArea fx:id="adresseLivraisonField" wrapText="true" prefRowCount="2" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-text-fill: black;"/>
            <Button text="..." onAction="#showAddressDialog"
                    style="-fx-background-color: #666666; -fx-text-fill: white;"/>
        </HBox>
        <Text GridPane.rowIndex="5" GridPane.columnIndex="1" 
              text="Adresse détaillée pour la livraison" 
              style="-fx-fill: #666666; -fx-font-size: 11;"/>

        <Label text="Quantité:" GridPane.rowIndex="6" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"/>
        <TextField fx:id="quantiteField" GridPane.rowIndex="6" GridPane.columnIndex="1"
                   style="-fx-background-color: white; -fx-text-fill: black;"/>
        <Text GridPane.rowIndex="7" GridPane.columnIndex="1" 
              text="Nombre d'unités commandées" 
              style="-fx-fill: #666666; -fx-font-size: 11;"/>

        <Label text="Statut:" GridPane.rowIndex="8" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: white;"/>
        <ComboBox fx:id="statutCombo" GridPane.rowIndex="8" GridPane.columnIndex="1"
                  maxWidth="Infinity"
                  style="-fx-background-color: white; -fx-text-fill: black;"/>
        <Text GridPane.rowIndex="9" GridPane.columnIndex="1" 
              text="État actuel de la commande" 
              style="-fx-fill: #666666; -fx-font-size: 11;"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Enregistrer" onAction="#handleSave"
                style="-fx-background-color: #32CD32; -fx-text-fill: white; -fx-min-width: 100;"/>
        <Button text="Annuler" onAction="#handleCancel"
                style="-fx-background-color: #FF4444; -fx-text-fill: white; -fx-min-width: 100;"/>
    </HBox>
</VBox> 